{
  "name": "fullstack-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Full-stack monorepo with Next.js and FastAPI",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:frontend\" \"pnpm:dev:backend\" --names \"frontend,backend\" --prefix-colors \"cyan,magenta\"",
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "pnpm build:frontend",
    "build:frontend": "cd frontend && pnpm build",
    "install:all": "pnpm install && cd backend && pip install -r requirements.txt",
    "lint:all": "pnpm lint:frontend && pnpm lint:backend",
    "lint:frontend": "cd frontend && pnpm lint",
    "lint:backend": "cd backend && ruff check .",
    "format:all": "pnpm format:frontend && pnpm format:backend",
    "format:frontend": "cd frontend && pnpm format",
    "format:backend": "cd backend && ruff format .",
    "test:all": "pnpm test:frontend && pnpm test:backend",
    "test:frontend": "cd frontend && pnpm test",
    "test:backend": "cd backend && pytest",
    "prepare": "command -v git >/dev/null 2>&1 && git config core.hooksPath .githooks || true"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
